# ExtMac Portfolio Environment Variables
# Copy this file to .env.local and update with your values

# Default mode (recruiter or game)
NEXT_PUBLIC_MODE_DEFAULT=recruiter

# CDN base URL for assets (images, models, etc.)
NEXT_PUBLIC_ASSETS_BASE=https://your-cdn-endpoint.com

# Resend API key for contact form emails
RESEND_API_KEY=your_resend_api_key_here

# Site URL for production
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# Optional: Google Analytics
NEXT_PUBLIC_GA_ID=your_google_analytics_id

# Optional: Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Development settings
NODE_ENV=development
